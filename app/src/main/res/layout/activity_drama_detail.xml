<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dramadetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DramaDetailActivity"
    android:background="@android:color/white">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="16dp"
        tools:context=".DramaDetailActivity" />

    <!-- 수평 선 -->
    <View
        android:layout_width="match_parent"
        android:id="@+id/line"
        android:layout_height="3dp"
        android:layout_below="@id/map"
        android:background="@android:color/black" />

    <!-- 아이템 정보 레이아웃 -->
    <LinearLayout
        android:id="@+id/itemInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/sw1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="드라마제목"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치정보" />

        </LinearLayout>
    </LinearLayout>

    <!-- 버튼들을 담을 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemInfoLayout"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <!-- 길찾기 버튼 -->
        <Button
            android:id="@+id/navigationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="길찾기" />

        <!-- 리뷰 작성 버튼 -->
        <Button
            android:id="@+id/writeReviewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰 작성"
            android:layout_marginLeft="50dp" /> <!-- 여기에서 마진을 조절 -->

    </LinearLayout>

</RelativeLayout>
