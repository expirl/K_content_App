<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfoFragment"
    android:orientation="vertical">


    <ImageView
        android:layout_gravity="center"
        android:id="@+id/img_user"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/userimg" />
    <TextView
        android:id="@+id/username"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="uesr 1"
        android:textSize="30sp"
        android:textStyle="bold"
        android:shadowColor="#8E8E8E"
        android:shadowRadius="10"
        android:shadowDy="15"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/userid"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="\@uesr 1"
        android:textSize="15sp"
        android:shadowColor="#8E8E8E"
        android:shadowRadius="10"
        android:shadowDy="1"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/enrollInfo"
        android:background="#EAE7E7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/uesrInfoView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitXY"
            android:src="@drawable/email" />
        <TextView
            android:layout_marginLeft="10dp"
            android:shadowColor="#8E8E8E"
            android:shadowRadius="10"
            android:shadowDy="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="가입 정보"/>


    </LinearLayout>

    <LinearLayout
        android:background="#EAE7E7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/manage_review"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitXY"
            android:src="@drawable/reviewimg" />
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shadowColor="#8E8E8E"
            android:shadowRadius="10"
            android:shadowDy="1"
            android:text="리뷰 관리"/>


    </LinearLayout>
    <LinearLayout
        android:background="#EAE7E7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/manage_bookmark"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitXY"
            android:src="@drawable/bookmark" />
        <TextView
            android:layout_marginStart="10dp"
            android:shadowColor="#8E8E8E"
            android:shadowRadius="10"
            android:shadowDy="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="즐겨찾기 관리"/>


    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userReviewList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn1"
            android:text="검색하기"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn2"
            android:text="사용자정보"/>
    </LinearLayout>





</LinearLayout>